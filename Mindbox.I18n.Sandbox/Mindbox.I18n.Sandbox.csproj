<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Mindbox.I18n.analysis-settings.json" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="Mindbox.I18n.analysis-settings.json" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Mindbox.I18n\Mindbox.I18n.csproj" />
    <ProjectReference Include="..\Mindbox.I18n.Analyzers\Mindbox.I18n.Analyzers\Mindbox.I18n.Analyzers.csproj" PrivateAssets="all"
                      ReferenceOutputAssembly="false"
                      OutputItemType="Analyzer" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Localization\Bands.ru-RU.i18n.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Localization\Cars.ru-RU.i18n.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
